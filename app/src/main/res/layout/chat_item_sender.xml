<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/container"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@drawable/chat_sender_backgroud"
        android:id="@+id/msg_layout">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/delete_text"
            android:src="@drawable/ic_close_black_24dp"
            android:visibility="gone"
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true"
            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:id="@+id/message_text"
        android:text="Hellllwwwwwasdasd asdasasdasdasdasdsa"
        android:textSize="18sp"
        android:textColor="@android:color/background_light"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date"
        android:layout_below="@+id/message_text"
        android:textColor="#e8e9ea"
        android:text=""
        android:textSize="12sp"
        android:paddingLeft="10dp"
        android:paddingRight="2dp"
        android:paddingBottom="10dp"
        />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/status_msg"
            android:background="@android:color/transparent"
            android:layout_below="@+id/message_text"
            android:layout_toRightOf="@+id/date"
            android:paddingRight="2dp"
            />
    </RelativeLayout>
   <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_sender_backgroud"
        android:id="@+id/file_layout"
       android:visibility="gone"
        >
       <ImageButton
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/delete_file"
           android:src="@drawable/ic_close_black_24dp"
           android:visibility="gone"
           android:background="@android:color/transparent"
           android:layout_alignParentRight="true"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/sender"
           android:text="1231312455:"
           android:textColor="@android:color/background_light"
           android:layout_marginLeft="10dp"
           android:layout_marginTop="2dp"
           />
        <ImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:id="@+id/imageview"
            android:src="@drawable/txt"
            android:background="@android:color/white"
            android:scaleType="fitXY"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/sender"
            />

       <ImageView
           android:id="@+id/download"
           android:layout_width="40dp"
           android:layout_height="40dp"
           android:layout_below="@+id/sender"
           android:layout_marginStart="3dp"
           android:layout_marginLeft="3dp"
           android:layout_marginTop="111dp"
           android:layout_toEndOf="@+id/imageview"
           android:layout_toRightOf="@+id/imageview"
           android:background="@android:color/transparent"
           android:src="@drawable/ic_file_download_black_24dp" />


       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/file_date"
           android:layout_below="@+id/imageview"
           android:textColor="#e8e9ea"
           android:text=""
           android:textSize="12sp"
           android:paddingLeft="10dp"
           android:paddingRight="2dp"
           android:paddingBottom="10dp"
           />
       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/status_file"
           android:background="@android:color/transparent"
           android:layout_below="@+id/imageview"
           android:layout_toRightOf="@+id/file_date"
           android:paddingRight="2dp"
           />
    </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/chat_sender_backgroud"
            android:id="@+id/audio_layout"
            >
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/delete_audio"
                android:src="@drawable/ic_close_black_24dp"
                android:visibility="gone"
                android:background="@android:color/transparent"
                android:layout_alignParentRight="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/audio_sender"
                android:text="1231312455:"
                android:textColor="@android:color/background_light"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                />
            <com.rygelouv.audiosensei.player.AudioSenseiPlayerView
                android:id="@+id/audio_player"
                android:layout_width="match_parent"
                android:layout_below="@id/audio_sender"
                android:layout_marginTop="4dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/audio_date"
                android:layout_below="@+id/audio_player"
                android:textColor="#424447"
                android:text="asdadasd"
                android:textSize="12sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/status_audio"
                android:background="@android:color/transparent"
                android:layout_below="@+id/audio_player"
                android:layout_toRightOf="@+id/audio_date"
                android:paddingRight="2dp"
                />
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>

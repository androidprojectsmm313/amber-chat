<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true"
        android:state_pressed="true">
        <shape android:padding="10dp" android:shape="rectangle">
            <solid android:color="@color/colorPrimary" />
            <stroke android:width="2dp" android:color="#FFCE3D" />
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="10dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_focused="true">
        <shape android:padding="10dp" android:shape="rectangle">
            <solid android:color="@color/colorPrimary" />
            <stroke android:width="2dp" android:color="#FFCE3D" />
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="10dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:padding="10dp"
            android:shape="rectangle">
            <solid android:color="@color/colorPrimary" />
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="10dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />
        </shape>
    </item>
</selector>